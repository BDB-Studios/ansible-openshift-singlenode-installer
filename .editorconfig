# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[*.yml]
ij_yaml_keep_line_breaks = true
ij_yaml_keep_indents_on_empty_lines = false
